@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: lavender;
        font-family: 'Segoe UI', sans-serif;
    }

    .container-centered {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }

    .title-text {
        font-size: 22px;
        font-weight: bold;
        color: black;
        margin-bottom: 20px;
        text-align: center;
    }

    .futuristic-button {
        font-size: 16px;
        font-weight: 600;
        padding: 12px 20px;
        margin: 8px 0;
        background-color: white;
        color: black;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        box-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
        transition: all 0.3s ease;
    }

        .futuristic-button:hover {
            background-color: cyan;
            box-shadow: 0 0 15px rgba(0, 255, 255, 0.6);
        }
</style>

<div class="container-centered">
    <div class="title-text">Contract Monthly Claim System</div>

    <form method="post" action="@Url.Action("Lecturer", "LecturerPage")">
        <button class="futuristic-button" type="submit">Lecturer</button>
    </form>

    <form method="post" action="@Url.Action("Index", "ManagerPage")">
        <button class="futuristic-button" type="submit">Manager</button>
    </form>

    <form method="post" action="@Url.Action("Index", "CoordinatorPage")">
        <button class="futuristic-button" type="submit">Coordinator</button>
    </form>

    <form method="post" action="@Url.Action("Index", "HR")">
        <button class="futuristic-button" type="submit">HR</button>
    </form>
</div>
